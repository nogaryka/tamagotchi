<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.FlowPane?>
<FlowPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
          fx:controller="controller.MenuController"
          prefWidth="200" prefHeight="200"
          alignment="CENTER"
          orientation="VERTICAL"
          vgap="30">

    <Button fx:id="button_newGame" text="Новая игра" onAction="#startNewGame"/>
    <Button fx:id="button_continueGame" text="Продолжить" onAction="#continueGame"/>
    <Button fx:id="button_ExitGame" text="Выход" onAction="#logOff"/>
</FlowPane>
